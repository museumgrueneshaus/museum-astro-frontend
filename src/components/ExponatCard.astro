---
import { urlFor } from '../lib/sanity';

export interface Props {
  exponat: any;
  showQR?: boolean;
}

const { exponat, showQR = false } = Astro.props;

const imageUrl = exponat.hauptbild 
  ? urlFor(exponat.hauptbild).width(400).height(300).url()
  : '/placeholder.jpg';
---

<article 
  class="exponat-card touchable" 
  data-id={exponat._id}
  data-category={exponat.kategorie?._id || ''}
  data-highlight={exponat.ist_highlight ? 'true' : 'false'}
  data-search={(exponat.titel + ' ' + (exponat.untertitel || '') + ' ' + (exponat.kurzbeschreibung || '') + ' ' + (exponat.tags || []).join(' ')).toLowerCase()}
>
  <div class="card-image">
    <img 
      src={imageUrl} 
      alt={exponat.titel}
      loading="lazy"
    />
    {exponat.ist_highlight && (
      <span class="highlight-badge" aria-label="Highlight">Highlight</span>
    )}
    {showQR && exponat.qr_code && (
      <div class="qr-badge">
        <span>QR</span>
      </div>
    )}
  </div>
  
  <div class="card-content">
    <div class="card-header">
      <span class="inv-nummer">{exponat.inventarnummer}</span>
      {exponat.kategorie && (
        <span class="kategorie" style={`background-color: ${exponat.kategorie.farbe}20; color: ${exponat.kategorie.farbe}`}>
          {exponat.kategorie.icon} {exponat.kategorie.titel}
        </span>
      )}
    </div>
    
    <h3 class="card-title">{exponat.titel}</h3>
    {exponat.untertitel && (
      <p class="card-subtitle">{exponat.untertitel}</p>
    )}
    
    <p class="card-description">
      {exponat.kurzbeschreibung}
    </p>
    
    {exponat.datierung?.jahr_text && (
      <p class="card-year">{exponat.datierung.jahr_text}</p>
    )}
    
    <div class="card-footer">
      {exponat.audio && exponat.audio.length > 0 && (
        <span class="media-badge" title="Audio verfügbar">Audio</span>
      )}
      {exponat.video && (
        <span class="media-badge" title="Video verfügbar">Video</span>
      )}
      {exponat.bilder && exponat.bilder.length > 1 && (
        <span class="media-badge" title="Weitere Bilder">{exponat.bilder.length} Bilder</span>
      )}
    </div>
  </div>
</article>

<style>
  .exponat-card {
    background: #fff;
    border-radius: var(--radius-2);
    overflow: hidden;
    box-shadow: var(--shadow);
    cursor: pointer;
    transition: transform .2s ease, box-shadow .2s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
    border: 1px solid var(--border);
  }

  .exponat-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 24px rgba(17,24,39,.08);
  }

  .card-image {
    position: relative;
    width: 100%;
    aspect-ratio: 4/3;
    overflow: hidden;
    background: var(--bg-alt);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform .35s ease;
  }

  .exponat-card:hover .card-image img {
    transform: scale(1.03);
  }

  .highlight-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: rgba(255,255,255,.9);
    color: var(--primary);
    padding: 2px 10px;
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: 700;
    border: 1px solid var(--border);
  }

  .qr-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(255,255,255,.9);
    width: 30px;
    height: 30px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--border);
    font-size: 0.625rem;
    font-weight: 700;
  }

  .card-content {
    padding: var(--space-5);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3);
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .inv-nummer {
    font-size: 0.75rem;
    color: var(--muted);
    font-weight: 500;
    font-family: monospace;
  }

  .kategorie {
    font-size: 0.75rem;
    padding: 2px 8px;
    border-radius: 12px;
    font-weight: 500;
    white-space: nowrap;
  }

  .card-title {
    font-size: clamp(1.1rem, 1.2vw, 1.25rem);
    font-weight: 700;
    color: var(--text);
    margin-bottom: var(--space-2);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-subtitle {
    font-size: 0.875rem;
    color: var(--muted);
    margin-bottom: var(--space-3);
    font-style: italic;
  }

  .card-description {
    font-size: 0.875rem;
    color: var(--text-dim);
    line-height: 1.5;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: var(--space-4);
  }

  .card-year {
    font-size: 0.75rem;
    color: var(--muted);
    margin-bottom: var(--space-3);
    font-weight: 500;
  }

  .card-footer {
    display: flex;
    gap: 0.5rem;
    margin-top: auto;
    padding-top: var(--space-3);
    border-top: 1px solid var(--border);
  }

  .media-badge {
    font-size: .75rem;
    background: var(--bg-alt);
    padding: 4px 10px;
    border-radius: 999px;
    color: var(--text-dim);
    border: 1px solid var(--border);
  }

  /* Touch device optimizations */
  @media (pointer: coarse) {
    .exponat-card {
      min-height: 380px;
    }

    .card-content {
      padding: var(--space-6);
    }

    .card-title {
      font-size: 1.375rem;
    }
  }

  /* Dark theme adjustments */
  [data-theme="dark"] .exponat-card {
    background: #0c111b;
  }

  [data-theme="dark"] .qr-badge {
    background: rgba(15,23,42,.9);
  }
</style>
