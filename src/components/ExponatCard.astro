---
import { urlFor } from '../lib/sanity';

export interface Props {
  exponat: any;
}

const { exponat } = Astro.props;

// Low-Quality Image Placeholder for smooth loading
const lqip = exponat.hauptbild?.asset?.metadata?.lqip;

// Generate a responsive image URL from Sanity
const image = exponat.hauptbild 
  ? urlFor(exponat.hauptbild).width(800).height(1066).auto('format').fit('crop')
  : null;
---

<a 
  href={`/exponat/${exponat._id}`}
  class="card-link touchable"
  data-category={exponat.kategorie?._id}
  data-highlight={exponat.ist_highlight ? 'true' : 'false'}
>
  <article class="exponat-card">
    <div class="card-image">
      {image && (
        <img 
          src={image.url()}
          alt={exponat.titel}
          loading="lazy"
          decoding="async"
          style={lqip ? `background-image: url(${lqip}); background-size: cover;` : ''}
        />
      )}
      {exponat.ist_highlight && (
        <div class="highlight-badge">Highlight</div>
      )}
    </div>
    <div class="card-content">
      <h3 class="card-title">{exponat.titel}</h3>
      {exponat.untertitel && (
        <p class="card-subtitle">{exponat.untertitel}</p>
      )}
    </div>
  </article>
</a>

<style>
  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .exponat-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: var(--bg, #000);
    overflow: hidden;
  }

  .card-image {
    position: relative;
    width: 100%;
    aspect-ratio: 3 / 4; /* Portrait aspect ratio */
    background-color: var(--bg-alt, #111);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .highlight-badge {
    position: absolute;
    top: var(--space-2, 16px);
    left: var(--space-2, 16px);
    padding: var(--space-1, 8px) var(--space-2, 16px);
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(5px);
    color: var(--primary, #fff);
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .card-content {
    padding: var(--space-3, 24px) var(--space-2, 16px);
  }

  .card-title {
    font-size: var(--font-h2, 32px);
    font-weight: 500;
    line-height: var(--heading-tight, 1.1);
    color: var(--primary, #fff);
    margin: 0 0 var(--space-1, 8px) 0;
  }

  .card-subtitle {
    font-size: var(--font-caption, 18px);
    font-weight: 400;
    color: var(--text-dim, #9ca3af);
    margin: 0;
  }
</style>