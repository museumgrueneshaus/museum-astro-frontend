---
import { urlFor } from '../lib/sanity';

export interface Props {
  exponat: any;
  showQR?: boolean;
}

const { exponat, showQR = false } = Astro.props;

const lqip = exponat.hauptbild?.asset?.metadata?.lqip || '';
const widths = [320,480,640,768,1024];
const src = exponat.hauptbild ? urlFor(exponat.hauptbild).width(640).height(480).auto('format').fit('crop').url() : '/placeholder.jpg';
const srcset = exponat.hauptbild
  ? widths.map(w => `${urlFor(exponat.hauptbild).width(w).height(Math.round(w*0.75)).auto('format').fit('crop').url()} ${w}w`).join(', ')
  : undefined;
---

<a href={`/exponat/${exponat._id}`} class="exponat-link">
  <article 
    class="exponat-card touchable" 
    data-id={exponat._id}
    data-category={exponat.kategorie?._id || ''}
    data-highlight={exponat.ist_highlight ? 'true' : 'false'}
    data-search={(exponat.titel + ' ' + (exponat.untertitel || '') + ' ' + (exponat.kurzbeschreibung || '') + ' ' + (exponat.tags || []).join(' ')).toLowerCase()}
  >
  <div class="card-image">
    <img 
      src={src}
      srcset={srcset}
      sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
      alt={exponat.titel}
      loading="lazy"
      decoding="async"
      style={lqip ? `background: url(${lqip}) center / cover no-repeat` : undefined}
    />
    {exponat.ist_highlight && (
      <span class="highlight-badge" aria-label="Highlight">Highlight</span>
    )}
    {showQR && exponat.qr_code && (
      <div class="qr-badge">
        <span>QR</span>
      </div>
    )}
  </div>
  
  <div class="card-content">
    <div class="card-header">
      <span class="inv-nummer">{exponat.inventarnummer}</span>
      {exponat.kategorie && (
        <span class="kategorie" style={`background-color: ${exponat.kategorie.farbe}20; color: ${exponat.kategorie.farbe}`}>
          {exponat.kategorie.icon} {exponat.kategorie.titel}
        </span>
      )}
    </div>
    
    <h3 class="card-title">{exponat.titel}</h3>
    {exponat.untertitel && (
      <p class="card-subtitle">{exponat.untertitel}</p>
    )}
    
    <p class="card-description">
      {exponat.kurzbeschreibung}
    </p>
    
    {exponat.datierung?.jahr_text && (
      <p class="card-year">{exponat.datierung.jahr_text}</p>
    )}
    
    <div class="card-footer">
      {exponat.audio && exponat.audio.length > 0 && (
        <span class="media-badge" title="Audio verfügbar">Audio</span>
      )}
      {exponat.video && (
        <span class="media-badge" title="Video verfügbar">Video</span>
      )}
      {exponat.bilder && exponat.bilder.length > 1 && (
        <span class="media-badge" title="Weitere Bilder">{exponat.bilder.length} Bilder</span>
      )}
    </div>
  </div>
  </article>
</a>

<style>
  .exponat-link { color: inherit; text-decoration: none; display: block; }

  .exponat-card {
    background: #fff;
    border-radius: 0;
    overflow: hidden;
    box-shadow: none;
    cursor: pointer;
    transition: none;
    display: flex;
    flex-direction: column;
    height: 100%;
    border: 1px solid var(--border);
  }

  .exponat-card:hover {
    transform: none;
    box-shadow: none;
  }

  .card-image {
    position: relative;
    width: 100%;
    aspect-ratio: 4/3;
    overflow: hidden;
    background: var(--bg);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: none;
  }

  .exponat-card:hover .card-image img {
    transform: none;
  }

  .highlight-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: rgba(255,255,255,1);
    color: var(--primary);
    padding: 2px 10px;
    border-radius: 0;
    font-size: 0.7rem;
    font-weight: 700;
    border: 1px solid var(--border);
  }

  .qr-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(255,255,255,1);
    width: 30px;
    height: 30px;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--border);
    font-size: 0.625rem;
    font-weight: 700;
  }

  .card-content {
    padding: var(--space-5);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3);
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .inv-nummer {
    font-size: 0.75rem;
    color: var(--muted);
    font-weight: 500;
    font-family: monospace;
  }

  .kategorie {
    font-size: 0.75rem;
    padding: 2px 8px;
    border-radius: 12px;
    font-weight: 500;
    white-space: nowrap;
  }

  .card-title {
    font-size: clamp(1.1rem, 1.2vw, 1.25rem);
    font-weight: 700;
    color: var(--text);
    margin-bottom: var(--space-2);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-subtitle {
    font-size: 0.875rem;
    color: var(--muted);
    margin-bottom: var(--space-3);
    font-style: italic;
  }

  .card-description {
    font-size: 0.875rem;
    color: var(--text-dim);
    line-height: 1.5;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: var(--space-4);
  }

  .card-year {
    font-size: 0.75rem;
    color: var(--muted);
    margin-bottom: var(--space-3);
    font-weight: 500;
  }

  .card-footer {
    display: flex;
    gap: 0.5rem;
    margin-top: auto;
    padding-top: var(--space-3);
    border-top: 1px solid var(--border);
  }

  .media-badge {
    font-size: .75rem;
    background: var(--bg);
    padding: 4px 10px;
    border-radius: 0;
    color: var(--text-dim);
    border: 1px solid var(--border);
  }

  /* Touch device optimizations */
  @media (pointer: coarse) {
    .exponat-card {
      min-height: 380px;
    }

    .card-content {
      padding: var(--space-6);
    }

    .card-title {
      font-size: 1.375rem;
    }
  }

  /* Dark theme adjustments */
  [data-theme="dark"] .exponat-card {
    background: var(--bg);
  }

  [data-theme="dark"] .qr-badge {
    background: var(--bg);
  }
</style>
